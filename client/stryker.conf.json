{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "mutate": [
    "src/**/*.ts",
    "!src/**/types.ts",
    "!src/main.ts",
    "!src/ui/prejoin.ts",
    "!src/players/**"
  ],
  "testRunner": "vitest",
  "reporters": ["clear-text", "progress", "html"],
  "coverageAnalysis": "off",
  "thresholds": {
    "high": 80,
    "low": 65,
    "break": 60
  },
  "vitest": {
    "configFile": "vitest.config.ts"
  }
}
